


@model IEnumerable<WebAppVsEat.Models.Restaurants>

@{
    ViewData["Title"] = "GetRestaurants";
}
<style>
    a.my-class { color: white}
</style>
  
<h1 style="font:bolder 50px arial">Restaurants</h1>


<table class="table" style="background-color:lightgrey">
    <thead>
        <tr style="background-color:#3d3a3a; color:white;">

            <th>
                Name
            </th>
            <th>
                Schedule
            </th>
            <th>
                Cuisine
            </th>
            <th>
                Address
            </th>
            <th>
                NPA
            </th>
            <th>
                City
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.restaurant.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.restaurant.Schedule)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.restaurant.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.restaurant.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city.NPA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.city.CityName)
            </td>
            <td>
                <button class="btn" style="background-color:#aa1515;">
                    @Html.ActionLink("View Dishes", "Details", new { id = item.restaurant.IdRestaurant }, new { @class = "my-class" })
                </button>
            </td>
        </tr>
        }
    </tbody>
</table>
