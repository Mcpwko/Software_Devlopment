


@model IEnumerable<DTO.Restaurant>

@{
    ViewData["Title"] = "GetRestaurants";
}
<style>
    a.my-class { color: white}
</style>
  
<h2>Restaurants</h2>


<table class="table" style="background-color:lightgrey">
    <thead>
        <tr style="background-color:#3d3a3a; color:white;">

            <th style="background-color:#3d3a3a; color:white;">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="background-color:#3d3a3a ; color:white;">
                @Html.DisplayNameFor(model => model.Schedule)
            </th>
            <th style="background-color:#3d3a3a ; color:white;">
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th style="background-color:#3d3a3a ; color:white;">
                Address
            </th>
            <th style="background-color:#3d3a3a ; color:white;">
                @Html.DisplayNameFor(model => model.IdCity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Schedule)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdCity)
                </td>
                <td>
                    <button class="btn" style="background-color:#aa1515;">
                        @Html.ActionLink("View Dishes", "Details", new { id = item.IdRestaurant, name =item.Name }, new { @class = "my-class" })
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
